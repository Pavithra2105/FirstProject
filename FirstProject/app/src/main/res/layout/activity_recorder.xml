<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RecorderActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Media Recorder"
        android:textSize="22dp"
        android:textAlignment="center"
        android:textColor="@color/teal_200"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rec Status : "
        android:textAlignment="center"
        android:layout_marginTop="100dp"
        android:textSize="20dp"
        android:textColor="#E91E63"
        android:id="@+id/record_status_txt"/>

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:layout_marginTop="40dp"
     android:gravity="center_horizontal">

     <Button
         android:id="@+id/btn1"
         android:layout_width="45dp"
         android:layout_height="45dp"
         android:layout_marginLeft="10dp"
         android:background="@drawable/ic_baseline_mic_45"/>
     <Button
         android:id="@+id/btn2"
         android:layout_width="45dp"
         android:layout_height="45dp"
         android:layout_marginLeft="10dp"
         android:background="@drawable/ic_baseline_mic_off_24"/>
     <Button
         android:id="@+id/btn3"
         android:layout_width="45dp"
         android:layout_height="45dp"
         android:layout_marginLeft="10dp"
         android:background="@drawable/ic_baseline_play_circle_filled_45"/>
     <Button
         android:id="@+id/btn4"
         android:layout_width="45dp"
         android:layout_height="45dp"
         android:layout_marginLeft="10dp"
         android:background="@drawable/ic_baseline_pause_circle_filled_45"/>
 </LinearLayout>

</LinearLayout>