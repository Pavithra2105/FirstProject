<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DatabaseActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SqLite Example"
        android:textSize="22dp"
        android:textAlignment="center"
        android:textColor="@color/teal_200"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/emp_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="EmpId"
        />

    <EditText
        android:id="@+id/emp_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="EmployeeName *"
        />

    <EditText
        android:id="@+id/emp_department"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="EmployeeDepartment *"
        />

    <EditText
        android:id="@+id/emp_salary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="EmployeeSalary *"
        />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:onClick="add_data"
        android:text="ADD New"
        />
    <Button
        android:onClick="update_data"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="UPDATE"/>
    <Button
        android:onClick="delete_data"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="DELETE"
       />

</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp">



    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:onClick="read_data"
        android:text="READ" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:onClick="all_data"
        android:text="All Data" />

</LinearLayout>



</LinearLayout>